<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>traffic</title>
  </head>
  <body>
    <img src="https://cdn.discordapp.com/attachments/837242003862716436/1061886079285866596/index.png" width="700">

    <div style="display: flex;">
      <table style="border-collapse: collapse;" border="3">
        <thead>
          <tr>
            <th>#</th>
            <th>위반종류</th>
            <th>트래킹번호</th>
            <th>위반시각</th>
          </tr>
        </thead>
        <tbody>
          {{#each accidents}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.type.label}}</td>
              <td>{{this.vehicleId}}</td>
              <td>{{this.createdAt}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      <div style="border: black solid 2px; width: 300px">
        <h3>현재 차량 수: {{status.vehicleCount}}대</h3>
        <h3>신호: {{status.trafficLight}}</h3>
        <hr>
        <p>1시간 기준</p>
        {{#each statics}}

          <h3>{{@key}}: {{this}}대</h3>
        {{/each}}
      </div>
    </div>

    <script>
      const accidentsEvent = new EventSource('/accidents/@event')

      accidentsEvent.addEventListener('message', ({ data }) => {
        const { requireRefresh } = JSON.parse(data)
        
        if (requireRefresh) {
          accidentsEvent.close()
          window.location.reload()
        }
      })

      const statusEvent = new EventSource('/status/@event')

      statusEvent.addEventListener('message', ({ data }) => {
        const { requireRefresh } = JSON.parse(data)
        
        if (requireRefresh) {
          statusEvent.close()
          window.location.reload()
        }
      })
    </script>

    <style>
      html, body, h1, h2, h3, h4, h5, h6, p {
        padding: 0;
        margin: 0;
      }
    </style>
  </body>
</html>
